<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityTheme" parent="Theme.AppCompat.DayNight.NoActionBar"></style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>


    ************************************************************************************************************************************************

    Custom styles for in-app UI

    ************************************************************************************************************************************************

    <style name="TextInputLayoutStyle">
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="DefaultTextStyle">


        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ListItem_Child_1_Style">

        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">#292929</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="ListItem_Child_2_Style">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#292929</item>
    </style>

    <style name="ListItem_Child_3_Style">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#292929</item>
    </style>

    <style name="editText_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="ListItem_Child_4_Style">

        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="NameAndCompanyLayoutStyle">

        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>

    </style>

    <style name="NameAndCompanyValueTextStyle" parent="HeadingsTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="HeadingsTextStyle">


        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="HeadingsDataTextStyle" parent="HeadingsTextStyle">

        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SideHeadingTextStyle_1" parent="HeadingsTextStyle">

        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="SideHeadingTextStyle_2" parent="HeadingsTextStyle">

        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>


    <style name="ContentTextStyle">

        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#D8D8D8</item>//#D8D8D8
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ActionButtonStyle_1" parent="ActionButtonStyle">


        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ToolBarLayoutStyle">


        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="ToolBarChildsLayoutStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ToolBarTextSize" parent="ToolBarChildsLayoutStyle">

        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LayoutWrapMatchStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ChartOptionsStyle">

        <item name="android:textAlignment">viewStart</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Details_Screen_LinearLayout_Margin_Style" parent="LinearLayoutMarginStyle">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="UnderlineStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="Dialog_UnderLineStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="LinearLayoutMarginStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>


    <style name="LinearLayoutMarginStyleItemCode">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>


    <style name="Attachments_Text_Style">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="SeparatorStyle">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="AttachmentsFontStyle">

        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>


