<?xml version="1.0" encoding="utf-8"?><!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--xmlns:card_view="http://schemas.android.com/tools"--><!--android:id="@+id/toolbar"--><!--style="@style/ToolBarLayoutStyle"--><!--android:layout_height="wrap_content"--><!--android:baselineAligned="false"--><!--android:orientation="horizontal"--><!--card_view:cardCornerRadius="3dp"--><!--card_view:cardElevation="1dp">-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/ToolBarLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
    android:orientation="horizontal">


    <LinearLayout
        style="@style/LayoutWrapMatchStyle"
        android:background="@color/dividercolor"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <android.support.v7.widget.SearchView
                android:id="@+id/searchBeers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:inputType="text"
                app:defaultQueryHint="Search..."
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mainActivity_imageButton_sort"
            style="@style/ToolBarChildsLayoutStyle"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_sort" />

    </LinearLayout>

</LinearLayout><!--</android.support.v7.widget.CardView>-->
